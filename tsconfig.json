{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": false,
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src", "tests"]
}
